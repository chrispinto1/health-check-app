<p id="notice"><%= notice %></p>
<div class="p-3 bg-light rounded-5 text-center">
  <h1>Endpoints</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th>Is Accessible?</th>
      <th>Num of Failures</th>
      <th colspan="3">Endpoint Options</th>
    </tr>
  </thead>

  <tbody>
    <% @endpoints.each do |endpoint| %>
      <tr>
        <td><%= endpoint.url %></td>
        <td class="<%= endpoint.is_accessible%> text-center"><%= endpoint.is_accessible%></td>
        <td class="text-center"><%= endpoint.failures%></td>
        <td><%= link_to 'Show', endpoint, class: "btn btn-info"%></td>
        <td><%= link_to 'Edit', edit_endpoint_path(endpoint), class: "btn btn-warning" %></td>
        <td><%= button_to 'Destroy', endpoint, method: :delete, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Endpoint', new_endpoint_path, class: "btn btn-success" %>
